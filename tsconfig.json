{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "outDir": "./dist/test-data-generator",
    "baseUrl": "./src",
    "sourceMap": true,

    "lib": ["es2022"]
  }
}
